<h2>All Recipes</h2>
<ul>
  <% recipes.forEach(recipe=>{ %> 
    <li> <form 
      action="/recipes/<%= recipe._id %>?_method=DELETE"
      method="POST">
      <a href="/recipes/<%= recipe._id %>"><%= recipe.name %></a>     
      -<%= recipe.owner.name %> 
      
      <button type="submit">X</button>
      </form>
     </li>
    <% }) %> 
</ul>


