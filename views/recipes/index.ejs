<%- include('../partials/html-head') %>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="/stylesheets/recipes/index.css" />
<%- include('../partials/nav') %>
<div class="body">
<h2>🍪   All Recipes  🍛</h2>
<ul>
  <% recipes.forEach(recipe=>{ %> 
    <li> <form 
      action="/recipes/<%= recipe._id %>?_method=DELETE"
      method="POST">
      <div class="recipes">
      <a href="/recipes/<%= recipe._id %>" class="recipe"> <span class="recipe-name"><%= recipe.name %></span></a>     
      - <span class="owner"><%= recipe.owner.name %></span>
      <% if (recipe.owner.equals(user?.profile._id)) { %>
      <button class="delBtn"type="submit">Delete Recipe</button>
      <% } %>
      </form>
    </li>
    <% }) %> 
  </div>
</ul>
</div>


<%- include('../partials/footer') %>